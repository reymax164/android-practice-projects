<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicinputs.FullTimeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/employeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Employee Name: "
            android:textColor="@color/parchment"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/employeeSalary"
            app:layout_constraintStart_toStartOf="@+id/employeeSalary" />

        <TextView
            android:id="@+id/employeeSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:text="Salary:"
            android:textColor="@color/parchment"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ft_nameInput"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/ft_nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="Full Name"
            android:textColor="@color/parchment"
            android:textColorHint="@color/parchment_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/salaryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Salary"
            android:textColor="@color/parchment"
            android:textColorHint="@color/parchment_hint"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ft_nameInput" />

        <EditText
            android:id="@+id/otPayEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Over Time Pay/hr"
            android:textColor="@color/parchment"
            android:textColorHint="@color/parchment_hint"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/otHourEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/salaryInput" />

        <EditText
            android:id="@+id/otHourEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Over Time Hours"
            android:textColor="@color/parchment"
            android:textColorHint="@color/parchment_hint"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/otPayEditText"
            app:layout_constraintTop_toBottomOf="@+id/salaryInput" />

        <Button
            android:id="@+id/getTotalSalaryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/steelBlue"
            android:text="Get Total"
            android:textColor="@color/parchment"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otPayEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>